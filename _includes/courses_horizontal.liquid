<div class="col mb-4">
  <a href="{{ course.url | relative_url }}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if course.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=course.img sizes="(min-width: 768px) 156px, 50vw" alt="course thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if course.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <p class="card-text">{{ course.description }}</p>
            {% if course.semester %}
              <div class="semester-info">
                <span class="badge bg-secondary">
                  {{ course.semester | replace: "-1", " Spring" | replace: "-2", " Fall" }}
                </span>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
