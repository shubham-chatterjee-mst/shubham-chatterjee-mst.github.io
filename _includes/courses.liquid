<div class="course-item">
  <a href="{{ course.url | relative_url }}">
    <div class="card h-100 hoverable">
      {% if course.img %}
        {% include figure.liquid loading="eager" path=course.img sizes="250px" alt="course thumbnail" class="card-img-top" %}
      {% endif %}
      <div class="card-body">
        <p class="card-text">{{ course.description }}</p>
        {% if course.semester %}
          <div class="semester-info">
            <span class="badge bg-secondary">
              {{ course.semester | replace: "-1", " Spring" | replace: "-2", " Fall" }}
            </span>
          </div>
        {% endif %}
      </div>
    </div>
  </a>
</div>
