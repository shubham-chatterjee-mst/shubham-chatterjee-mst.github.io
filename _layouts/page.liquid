---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}
<style>
  .syllabus-btn {
    border: 1px solid #29b6f6;
    color: #29b6f6;
    padding: 10px 20px;
    border-radius: 4px;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  .syllabus-btn:hover {
    background: #29b6f6;
    color: #1a1a1a;
    text-decoration: none;
  }
  .syllabus-btn i {
    font-size: 1.1em;
  }
</style>
<div class="post">
  <header class="post-header">
    {% if page.course %}
      <!-- Course page header with syllabus button -->
      <div class="d-flex justify-content-between align-items-start">
        <div>
          <h1 class="post-title" style="font-weight: bold;">{{ page.title }}</h1>
          <p class="post-description">{{ page.description }}</p>
        </div>
        {% if page.syllabus %}
          <div>
            <a href="{{ page.syllabus | relative_url }}" class="syllabus-btn"> <i class="fas fa-book"></i>SYLLABUS </a>
          </div>
        {% endif %}
      </div>
    {% else %}
      <!-- Regular page header -->
      <h1 class="post-title" style="font-weight: bold;">{{ page.title }}</h1>
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>
  <article>
    {{ content }}
  </article>
  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}
  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
